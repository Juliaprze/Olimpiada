@model Olimpiada.Controllers.CompetitionsDetailViewModel

<h1>Starty sportowca ID: @Model.AthleteId</h1>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Dyscyplina</th>
        <th>Wydarzenie</th>
        <th>Olimpiada</th>
        <th>Sezon</th>
        <th>Wiek sportowca</th>
        <th>Medal</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var competition in Model.Competitions)
    {
        <tr>
            <td>@competition.SportName</td>
            <td>@competition.EventName</td>
            <td>@competition.Olympics</td>
            <td>@competition.Season</td>
            <td>@competition.AthleteAge</td>
            <td>@competition.Medal</td>
        </tr>
    }
    </tbody>
</table>

<a href="/athletes/@Model.AthleteId/add-event" class="btn btn-primary">Dodaj wydarzenie</a>
<a href="/athletes" class="btn btn-secondary">Powrót do listy sportowców</a>