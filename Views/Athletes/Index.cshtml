@model Olimpiada.Controllers.AthleteListViewModel

<h1>Lista sportowców</h1>
<table>
    <thead>
    <tr>
        <th>Imię i nazwisko</th>
        <th>Waga</th>
        <th>Wzrost</th>
        <th>Płeć</th>
        <th>Złote medale</th>
        <th>Srebrne medale</th>
        <th>Brązowe medale</th>
        <th>Starty</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var athlete in Model.Athletes)
    {
    <tr>
        <td>@athlete.FullName</td>
        <td>@athlete.Weight</td>
        <td>@athlete.Height</td>
        <td>@athlete.Gender</td>
        <td>@athlete.GoldMedals</td>
        <td>@athlete.SilverMedals</td>
        <td>@athlete.BronzeMedals</td>
        <td><a href="@athlete.CompetitionsLink">Zobacz starty (@athlete.CompetitionsCount)</a></td>
    </tr>
    }
    </tbody>
</table>

<p>Strona @Model.CurrentPage z @((Model.TotalAthletes + Model.PageSize - 1) / Model.PageSize)</p>
<div>
    @if (Model.CurrentPage > 1)
    {
    <a href="?page=@(Model.CurrentPage - 1)&pageSize=@Model.PageSize">Poprzednia</a>
    }
    @if (Model.CurrentPage < (Model.TotalAthletes + Model.PageSize - 1) / Model.PageSize)
    {
    <a href="?page=@(Model.CurrentPage + 1)&pageSize=@Model.PageSize">Następna</a>
    }
</div>
